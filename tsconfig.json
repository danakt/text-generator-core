{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "strictNullChecks": true,
    "removeComments": true,
    "lib": ["es5", "es6", "dom"],
    "jsx": "react",
    "jsxFactory": "createElement"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true
}
