{
  "compilerOptions": {
    "outDir": "./dist/",
    "watch": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "strictNullChecks": true,
    "removeComments": true,
    "lib": ["es5", "es6", "dom"],
    "jsx": "react",
    "jsxFactory": "createElement"
  },
  "exclude": [
    "node_modules",
    "./test/"
  ]
}
